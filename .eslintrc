{
    "extends": "react-app",
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "webextensions": true
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": ["error", {
            "arrays": "never",
            "imports": "never",
            "exports": "never",
            "functions": "never",
            "objects": "always"
        }],
        "indent": "error"
    },
    "ignorePatterns": ["dist/*"]
}